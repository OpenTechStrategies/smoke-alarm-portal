block content
  body(data-context='', data-controller='chapter', data-action='chapterLanding', data-twttr-rendered='true', data-feedly-mini='yes')
    #colorbox(style='padding-bottom: 16px; padding-right: 56px; display: none;')
      #cboxWrapper
        div
          #cboxTopLeft(style='float: left;')
          #cboxTopCenter(style='float: left;')
          #cboxTopRight(style='float: left;')
        div(style='clear: left;')
          #cboxMiddleLeft(style='float: left;')
          #cboxContent(style='float: left;')
            #cboxLoadedContent(style='width: 0px; height: 0px; overflow: hidden; float: left;')
            #cboxLoadingOverlay(style='float: left;')
            #cboxLoadingGraphic(style='float: left;')
            #cboxTitle(style='float: left;')
            #cboxCurrent(style='float: left;')
